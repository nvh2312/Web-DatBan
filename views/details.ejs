<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Admin - Dashboard</title>

    <!-- Custom fonts for this template-->
    <link href="/stylesheets/admin/all.min.css" rel="stylesheet" type="text/css">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet">

    <link href="https://cdn.datatables.net/1.12.1/css/dataTables.bootstrap5.min.css" rel="stylesheet">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
    <script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.12.1/js/dataTables.bootstrap5.min.js"></script>
    <!-- Custom styles for this template-->
    <link href="/stylesheets/admin/admin.css" rel="stylesheet">
    <link href="/stylesheets/toastr.css" rel="stylesheet">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css" />
    <link rel="stylesheet"
        href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.full.min.js"></script>

</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <%- include('./partials/admin/sidebar.ejs') %>
            <div id="content-wrapper" class="d-flex flex-column">

                <!-- Main Content -->
                <div id="content">
                    <%- include('./partials/admin/topbar.ejs') %>
                        <div class="mx-5">
                            <div class="d-flex">
                                <div class="col-md-10 text-center">
                                    <h1><strong>Order Detail</strong></h1>
                                </div>
                                <div class="col-md-2">
                                    <div class="d-flex">
                                        <div class="col-md-4"></div>
                                        <div class="col-md-8">
                                            <button class="btn btn-primary">Print Bill</button>
                                        </div>
                                    </div>

                                </div>
                            </div>
                            <hr>
                            <div class="d-flex mt-5">
                                <div class="col-md-8 mr-3 bg-white bdr">
                                    <div class="mx-3">
                                        <div class="date-init">
                                            <div class="d-flex mt-2">
                                                <div class="col-md-7">

                                                </div>
                                                <div class="col-md-5">
                                                    <span class="text-dark"><strong>Init date:</strong></span>
                                                    <%=data[0].date_init %>
                                                </div>
                                            </div>
                                        </div>
                                        <hr>
                                        <div class="customer-details">
                                            <div class="d-flex">
                                                <div class="col-md-6">
                                                    <h5 class="text-dark"><strong>Customer Details</strong></h5>
                                                    <br>
                                                    <span class="text-dark"><strong>Name: </strong></span><span>
                                                        <%=data[0].booking_name %>
                                                    </span><br>
                                                    <span class="text-dark"><strong>Phone contact:</strong></span><span>
                                                        <%=data[0].booking_phone %>
                                                    </span><br>
                                                    <span class="text-dark"><strong>Order Date:</strong></span><span>
                                                        <%=JSON.stringify(data[0].booking_date).slice(1,11) %>
                                                    </span><br>
                                                    <span class="text-dark"><strong>Order Time:</strong></span><span>
                                                        <%=data[0].booking_time.slice(1,-1) %>
                                                    </span>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <div class="text-center"
                                                            style="border: 1px solid rgb(158, 157, 157);">
                                                            <div class="py-1" style="font-weight: 900;">STATUS</div>
                                                            <hr>
                                                            <div class="py-1 text-primary " style="font-weight: 500;">
                                                                <%=data[0].status %>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="food-order">
                                            <br>
                                            <% data.forEach(function(product) { %>
                                                <div class="d-flex bg-light mb-1">
                                                    <div class="col-md-4 product-name">
                                                        <p class="mt-1">
                                                            <input type="hidden" name="detail_id" id="detail_id"
                                                                value="<%=product.detail_id %>" />
                                                            <%=product.product_name %>
                                                        </p>
                                                    </div>
                                                    <div class="col-md-4 price text-center">
                                                        <p class="mt-1">
                                                            <%=product.unit_price %> VND
                                                        </p>
                                                    </div>
                                                    <div class="col-md-1 mt-1">x</div>
                                                    <div class="col-md-3 quantity text-center">
                                                        <p class="mt-1">
                                                            <%=product.quantity %>
                                                        </p>
                                                    </div>
                                                </div>
                                                <% }); %>
                                        </div>
                                        <div class="total mt-3 text-center">
                                            <span class="fs-3 text-dark">Total: <%=data[0].total %> VND</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4 bg-white bdr" style="height: 12em;">
                                    <div class=" mt-5">
                                        <div class="order-action text-center">
                                            <h4 class="text-primary">Order Action</h4>
                                        </div>
                                        <hr>
                                        <% if (data[0].status=="Hủy đơn" ) { %>
                                            <div class="text-center">
                                                <button class="btn btn-danger" disabled>Đơn đã hủy</button>
                                            </div>
                                            <%}else if(data[0].status=="Chờ xác nhận" ) {%>
                                                <div class="d-flex text-center">
                                                    <div class="col-md-6">
                                                        <button class="btn btn-danger" data-id="<%=data[0].id %>"
                                                            onclick="cancelOrder(this)">Cancel Order</button>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <button class="btn btn-success" data-id="<%=data[0].id %>"
                                                            onclick="acceptOrder(this)">Accept Order</button>
                                                    </div>
                                                </div>
                                                <%} else if(data[0].status=="Chờ thanh toán" ){ %>
                                                    <div class="d-flex text-center">
                                                        <div class="col-md-6">
                                                            <button class="btn btn-danger" data-id="<%=data[0].id %>"
                                                                onclick="cancelOrder(this)">Cancel Order</button>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <button class="btn btn-success" data-id="<%=data[0].id %>"
                                                                onclick="completeOrder(this)">Complete Payment</button>
                                                        </div>
                                                    </div>
                                                    <%} else { %>
                                                        <div class="text-center">
                                                            <button class="btn btn-success" disabled>Đã thanh
                                                                toán</button>
                                                        </div>
                                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>



                </div>
                <!-- End of Page Wrapper -->

                <!-- Scroll to Top Button-->
                <a class="scroll-to-top rounded" href="#page-top">
                    <i class="fas fa-angle-up"></i>
                </a>
            </div>
            <!-- /.container-fluid -->
    </div>
    <!-- End of Main Content -->
    <%- include('./partials/admin/logout.ejs') %>

</html>
<div class="modal" id="action_modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" id="sample_form">
                <div class="modal-header" id="dynamic_modal_title">
                    <h5 class="modal-title"></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Name</label>
                        <input type="text" name="name" id="name" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Price</label>
                        <input type="number" name="price" id="price" class="form-control" />
                    </div>

                </div>
                <div class="modal-footer">
                    <input type="hidden" name="id" id="id" />
                    <input type="hidden" name="action" id="action" value="Add" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary" id="action_button">Add</button>
                </div>
            </form>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/jquery.validate.min.js"></script>
<script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/additional-methods.min.js"></script>
<script src="/javascripts/bootstrap/bootstrap.bundle.min.js"></script>
<script src="/javascripts/admin/detail.js"></script>
<!-- Custom scripts for all pages-->
<script src="/javascripts/admin-size.js"></script>
<script src="/javascripts/toastr.js"></script>



</body>